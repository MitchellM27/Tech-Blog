<div class="text-center">
  <h2>{{this.name}}</h2>
  <p>{{this.contents}}</p>
  <p>Created by {{this.username}} on {{format_date this.date_created}}</p>
  
<form class="comment-form">
  <div>
    <textarea data-id="post_{{this.id}}" class="ml-5" name="comment-text"></textarea>
  </div>

  <div>
    <button class="button is-warning ml-3 mb-3" type="submit">comment here</button>
  </div>
  
</form>



{{#each comments as |comment|}}
		<section class="comment-post">
    <div class="card">
      <div class="meta">
        {{username}}: {{contents}}
      </div>
      <div class="text">
        {{format_date date_created}} 

        {{!-- {{#if (if_eq @root/username this.username)}}
        <div class="align-content-end">
        <button class="btn btn-sm btn-danger comment-delete" id="cancel_{{this.id}}" data-id="{{comment.id}}">DELETE</button>
      </div>
      {{/if}} --}}
      </div>
    </div>
  </section>
		{{/each}}



<script src="/js/comments.js"></script>
</div>
