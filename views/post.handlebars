<div class="text-center">
  <h2>{{this.name}}</h2>
  <p>{{this.contents}}</p>
  <p>Created by {{this.username}} on {{format_date this.date_created}}</p>
  
<form class="comment-form">
  <div>
    <textarea data-id="post_{{this.id}}" class="ml-5" name="comment-text"></textarea>
  </div>

  <div>
    <button class="button is-warning ml-3 mb-3" type="submit">comment here</button>
  </div>
  
</form>



{{#each comments as |comment|}}
		<section class="comment">
    <div class="meta">
      {{username}} on {{format_date date_created}}
    </div>
    <div class="text">
      {{contents}}
    </div>
  </section>
		{{/each}}



<script src="/js/comments.js"></script>
</div>
